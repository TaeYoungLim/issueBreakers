<?xml version="1.0" encoding="UTF-8"?>

<web-app id="web" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<servlet>
		<servlet-name>ServletController</servlet-name>
		<servlet-class>common.util.ServletController</servlet-class>
		<init-param>
	  		<param-name>ServletController</param-name>
	  		<param-value>/WEB-INF/config/servletMappingConfig.json</param-value>
	  	</init-param>
	  	<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletHandler</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>jsp/index.jsp</welcome-file>
	</welcome-file-list>
</web-app>